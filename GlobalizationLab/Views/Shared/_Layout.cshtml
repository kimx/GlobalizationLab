<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Globalization</title>
    @Styles.Render("~/Content/css")
    @*@Scripts.Render("~/bundles/modernizr")*@

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Date", "Index", "Product", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Price", "Price", "Product")</li>
                    <li>@Html.ActionLink("ValidationDefaultType", "ValidationDefaultType", "Product")</li>
                    <li>@Html.ActionLink("TemplateTest", "TemplateTest", "Product")</li>
                    @*<li>@Html.ActionLink("關於", "About", "Home")</li>
                        <li>@Html.ActionLink("連絡方式", "Contact", "Home")</li>*@
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="container">
            <div class="row">
                <h1>Current Culture:@System.Threading.Thread.CurrentThread.CurrentUICulture.Name</h1>
                @using (Html.BeginForm())
                {

                    List<System.Globalization.CultureInfo> cultures = new List<System.Globalization.CultureInfo>();
                    cultures.Add(System.Globalization.CultureInfo.CreateSpecificCulture("zh-CN"));
                    cultures.Add(System.Globalization.CultureInfo.CreateSpecificCulture("zh-TW"));
                    //cultures.Add(System.Globalization.CultureInfo.CreateSpecificCulture("en-US"));
                    cultures.Add(System.Globalization.CultureInfo.CreateSpecificCulture("en-ZA"));

                    //cultures.Add(System.Globalization.CultureInfo.CreateSpecificCulture("af-ZA"));
                    cultures.Add(System.Globalization.CultureInfo.CreateSpecificCulture("en-GB"));

                    <div class="col-lg-3">@Html.DropDownList("cultureName", new SelectList(cultures, "Name", "DisplayName"))</div>
                    <div class="col-lg-*"><button type="submit">Change</button></div>
                }

            </div>
        </div>
        <hr />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 應用程式</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>
