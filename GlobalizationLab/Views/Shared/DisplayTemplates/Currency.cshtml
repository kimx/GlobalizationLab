@model System.Object
@*http://msdn.microsoft.com/zh-tw/library/0c899ak8(v=vs.110).aspx*@
@if (Model!=null)
{
    double value = Convert.ToDouble(Model);
    
    if (ViewData.Keys.Contains("digit"))
    {
        @:R @value.ToString("N" + Convert.ToInt32(ViewData["digit"]), new System.Globalization.CultureInfo("en-GB"))
    }
    else
    {
        @:R @value.ToString("N2", new System.Globalization.CultureInfo("en-GB"))
    }

}