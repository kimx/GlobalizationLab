@model System.Object
@*http://msdn.microsoft.com/zh-tw/library/0c899ak8(v=vs.110).aspx*@
@if (Model != null)
{
    double value = Convert.ToDouble(Model);
    System.Globalization.CultureInfo culture = new System.Globalization.CultureInfo("en");
    culture.NumberFormat.CurrencySymbol = "R";
    if (ViewData.Keys.Contains("digit"))
    {
       @value.ToString("C" + Convert.ToInt32(ViewData["digit"]), culture)
    }
    else
    {
       @value.ToString("C2", culture)
    }

}