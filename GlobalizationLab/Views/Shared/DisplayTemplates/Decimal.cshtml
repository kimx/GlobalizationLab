@model System.Decimal?
        @*http://msdn.microsoft.com/zh-tw/library/0c899ak8(v=vs.110).aspx*@
@if (Model.HasValue)
{
    if (ViewData.Keys.Contains("digit"))
    {
        @Model.Value.ToString("N" + Convert.ToInt32(ViewData["digit"]))
    }
    else
    {
        @Model.Value.ToString("N5")
    } 

}

