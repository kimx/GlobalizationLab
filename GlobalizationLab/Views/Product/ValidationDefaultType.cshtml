@model GlobalizationLab.Models.ProductModel
@{
    ViewBag.Title = "ValidationDefaultType";
}

<h2>ValidationDefaultType</h2>
<div class="container">
    <div class="row">
        <div class="col-lg-6">
            @using (Html.BeginForm())
            {
                @Html.Hidden("cultureName", System.Threading.Thread.CurrentThread.CurrentCulture.Name)
                <div class="form-horizontal">

                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(model => model.ProductName, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.ProductName)
                            @Html.ValidationMessageFor(model => model.ProductName)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Price, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.Price)
                            @Html.ValidationMessageFor(model => model.Price)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PricedDecmial, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.PricedDecmial)
                            @Html.ValidationMessageFor(model => model.PricedDecmial)
                            <span>@Model.PricedDecmial</span>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Qty, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.TextBoxFor(model => model.Qty)
                            @Html.ValidationMessageFor(model => model.Qty)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.IsOrder, new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.CheckBoxFor(model => model.IsOrder)
                            @Html.ValidationMessageFor(model => model.IsOrder)
                        </div>
                    </div>

                    <div class="form-group">

                        <div class="col-md-10">
                            <button type="submit">Send</button>
                        </div>
                    </div>



                </div>
            }
        </div>

    </div>
</div>
@section scripts{
    <script>
        $(function () {
            $("#IsOrder").on("click", function () {
                var v = $("#IsOrder").prop("checked");
                alert(v);
            })


        });
    </script>
}